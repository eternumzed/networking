doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous" defer)
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet")

  body(class='container-fluid m-0 p-0')
    block sidebar
      nav(class='navbar navbar-expand-lg navbar-dark bg-dark')
        div(class='container-fluid ms-5')
          a(href='/' class='navbar-brand') home
          button(class='navbar-toggler' type='button' data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            span(class='navbar-toggler-icon')
          div(class='collapse navbar-collapse' id='navbarSupportedContent')
            ul(class='navbar-nav me-auto')
              li(class='nav-item')
                a(href='/tests' class='nav-link') tests
              li(class='nav-item')
                a(href='/materials' class='nav-link') materials
              li(class='nav-item')
                a(href='/about' class='nav-link') about
            a(href='/account' class='nav-item nav-link ps-0') account
      div(class='container-fluid')
        block content
